<UserControl x:Class="Desktop.EquationInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop"
             xmlns:props="clr-namespace:Desktop.Properties"
             mc:Ignorable="d"
             MinHeight="80"
             MinWidth="400">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="1">
        <StackPanel>
            <Label x:Name="EquationInputLabel" Content="{x:Static props:Resources.EquationInputLabel}" FontSize="18" HorizontalAlignment="Center" VerticalContentAlignment="Center"/>
            <TextBox x:Name="EquationInputField" TextWrapping="Wrap" Text="" Margin="2,0" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" FontSize="18" Background="White"/>
            <Button x:Name="EquationCheckButton" Content="{x:Static props:Resources.CheckEquationCaption}" HorizontalAlignment="Center" Margin="0,10,0,10" VerticalAlignment="Top" FontSize="18" BorderBrush="Black" />
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
